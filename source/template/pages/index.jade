extends ../start
block title
    | Главная
block content
    .main-container.welcome-page
        .auth-top
            button.btn.btn_light.auth-top__btn#auth_flip Авторизоваться
        main.main
            .welcome
                .welcome__front
                    .panel.panel_theme_light
                        .panel__content
                            .person
                                .person__ava
                                    img(src='./assets/img/content/ava.jpg').person__img
                                .person__name Петренко Ольга
                                .person__content Личный сайт веб разработчика
                            .welcome-social
                                .social.social_primary
                                    ul.social__list
                                        each href, name in social
                                            li.social__item
                                                a(href="#{href}").social__link
                                                    +icon(name,'social__icon')
                        .panel__actions
                            ul.panel__actions-list
                                li.panel__actions-item
                                    a(href='#').panel__actions-link Мои работы
                                li.panel__actions-item
                                    a(href='#').panel__actions-link Обо мне
                                li.panel__actions-item
                                    a(href='#').panel__actions-link Блог

                .welcome__back
                    form(action='',method='post',name='authorization').authorization
                        .panel.panel_theme_light
                            .panel__content
                                .panel__title
                                    .base-title
                                        .base-title__text Авторизуйтесь
                                .input-addon
                                    .input-addon__item
                                        +icon('login','input-addon__icon')
                                    input(type='text',name='login',placeholder='Логин',required).base-inp.input-addon__field
                                .input-addon
                                    .input-addon__item
                                        +icon('password','input-addon__icon')
                                    input(type='password',name='password',placeholder='Пароль',required).base-inp.input-addon__field
                                .authorization__captcha
                                    label.switch
                                        input(type='checkbox',name='captcha',value='yes').switch__inp
                                        span.switch__el.switch__el_checkbox
                                        span.switch__text Я человек
                                .authorization__extra-captcha
                                    .authorization__extra-captcha-title
                                        |Вы точно не робот?
                                    .switches
                                        label.switch
                                            input(type='radio',name='extra_captcha',value='yes').switch__inp
                                            span.switch__el.switch__el_radio
                                            span.switch__text Да
                                        label.switch
                                            input(type='radio',name='extra_captcha',value='no').switch__inp
                                            span.switch__el.switch__el_radio
                                            span.switch__text Не уверен
                            .panel__actions
                                ul.panel__actions-list
                                    li.panel__actions-item
                                        a(href='#').panel__actions-link#on_main На главную
                                    li.panel__actions-item
                                        button(type='submit').panel__actions-link Войти
        .welcome-copy
            .copy
                span.copy__person © Ольга Петренко
                |  создано с любовью в LoftSchool | 2016
include ../common/_foot